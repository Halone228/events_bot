# Telegram Bot Token (обязательно)
BOT_TOKEN=your_telegram_bot_token_here

# Database URL (опционально, по умолчанию SQLite)
DATABASE_URL=sqlite+aiosqlite:///./events_bot.db
# Для PostgreSQL: postgresql+asyncpg://user:password@localhost:5432/dbname
# Для MySQL: mysql+aiomysql://user:password@localhost:3306/dbname

# Logfire Token (опционально)
LOGFIRE_TOKEN=your_logfire_token_here

# Environment
ENVIRONMENT=development
DEBUG=true

# Test Mode (использует временную базу в памяти)
TEST_MODE=false 